@using WebApplication2.Models.ViewModels
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Haber</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">SPORTS STORE</span>
    </div>
    <div class="m-1 p-1">
        <div class="text-danger" asp-validation-summary="All"></div>

        <form asp-action="Login" asp-controller="admin" method="post">

            <div class="form-group">
                <label asp-for="kullaniciadi"></label>
                <div asp-validation-for="kullaniciadi" class="text-danger"></div>
                <input asp-for="kullaniciadi" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="sifre"></label>
                <div asp-validation-for="sifre" class="text-danger"></div>
                <input asp-for="sifre" type="password" class="form-control" />
            </div>
            <button class="btn btn-primary" type="submit" asp-controller="Admin" asp-action="Index">Log In</button>
        </form>
    </div>
</body>
</html>
